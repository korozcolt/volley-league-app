# .env.example - Plantilla para otros desarrolladores

# PocketBase Configuration
EXPO_PUBLIC_POCKETBASE_URL=https://your-pocketbase-url.com
EXPO_PUBLIC_POCKETBASE_HEALTH_ENDPOINT=/health
EXPO_PUBLIC_POCKETBASE_API_ENDPOINT=/api/

# App Configuration  
EXPO_PUBLIC_APP_NAME=Volley League App
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_APP_ENVIRONMENT=development

# API Configuration
EXPO_PUBLIC_API_TIMEOUT=10000
EXPO_PUBLIC_MAX_RETRIES=3

# Cache Configuration
EXPO_PUBLIC_CACHE_TTL=300000
EXPO_PUBLIC_AUTH_TOKEN_KEY=pb_auth
EXPO_PUBLIC_USER_CACHE_KEY=user_cache

# Upload Configuration
EXPO_PUBLIC_MAX_FILE_SIZE=2097152
EXPO_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# Match Configuration (Volleyball Rules)
EXPO_PUBLIC_DEFAULT_SET_POINTS=25
EXPO_PUBLIC_DEFAULT_FINAL_SET_POINTS=15
EXPO_PUBLIC_MIN_POINT_DIFFERENCE=2
EXPO_PUBLIC_MAX_SETS_PER_MATCH=5
EXPO_PUBLIC_MAX_TIMEOUTS_PER_SET=2
EXPO_PUBLIC_MAX_SUBSTITUTIONS_PER_SET=6

# Feature Flags
EXPO_PUBLIC_ENABLE_REAL_TIME=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_DEBUG_MODE=false